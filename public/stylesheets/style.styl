body
  background #eee
.content-wrapper
  display flex
  flex-direction row
  justify-content space-around

.content
  display flex
  flex 1 1 auto
  max-width 1080px

.repl-container
  display flex
  flex-direction column
  height 100%
  width 100%

.editor-area
  flex 1 1 auto
  width 100%
  // min-height 150px
  min-height 300px
  display flex
  flex-direction row
  flex-wrap wrap

.code
  flex 1 1 auto
  min-width 350px
  min-height 150px
  max-height 287px
  overflow-y auto

.output
  margin-top 0
  flex 1 1 auto
  background-color lightgrey
  padding 1rem
  min-height 118px
  max-height 300px
  min-width 350px
  overflow-y auto

.errs
  flex 1 1 auto
  height 100%
  .errMsg
    overflow-y auto
    color violet

button
  padding 1rem
  margin 1rem
  width 5rem
  border-radius 5px
  user-select none
  -moz-user-select none
  -khtml-user-select none
  -webkit-user-select none
  -o-user-select none